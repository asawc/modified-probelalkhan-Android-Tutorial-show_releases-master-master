<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_release"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Id"
        android:textSize="@dimen/release_list_item_text_size" />

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_line"
        android:layout_toRightOf="@+id/id"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/date_creation"
        android:layout_width="171dp"
        android:layout_height="124dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/id_release"
        android:gravity="center"
        android:padding="15dp"
        android:text="10-03-2020 09:40:00"
        android:textSize="@dimen/release_list_item_text_size" />

    <TextView
        android:id="@+id/employee_surname"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/date_creation"
        android:gravity="center"
        android:padding="10dp"
        android:text="Employee surname"
        android:textSize="@dimen/release_list_item_text_size" />

    <TextView
        android:id="@+id/employee_name"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:layout_below="@+id/employee_surname"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Employee name"
        android:textSize="@dimen/release_list_item_text_size" />

</RelativeLayout>